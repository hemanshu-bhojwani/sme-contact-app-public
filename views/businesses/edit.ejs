<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Business</h1>

        <div class="col-md-6 offset-md-3 mb-5">
                    <form action="/business/<%=business._id%>?_method=PUT" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" value="<%=business.username%>" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" value="<%=business.email%>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="name">Business Name</label>
                            <input class="form-control" type="text" id="name" name="name" value="<%=business.name%>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="location">Location</label>
                            <input class="form-control" type="text" id="location" name="location" value="<%=business.location%>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="contact">Contact Number</label>
                            <input class="form-control" type="tel" id="contact" name="contact" pattern="\+[0-9]*" value="<%=business.contact%>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <input class="form-control" type="text" id="description" name="description" value="<%=business.description%>">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <button class="btn btn-success btn-block">Edit Business</button>
                    </form>

        </div>
</div>