<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Employee</h1>
    <div class="col-md-6 offset-md-3 mb-5">
        <form action="/business/new" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Name</label>
                <input class="form-control" type="text" id="name" name="employee[name]" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="position">Position</label>
                <input class="form-control" type="text" id="position" name="employee[position]" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input class="form-control" type="text" id="email" name="employee[email]" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="contact">Contact Number</label>
                <input class="form-control" type="tel" id="contact" name="employee[contact]" pattern="\+[0-9]*" value="+" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>


            <div class="mb-3">
                <button class="btn btn-success">Add Employee</button>
            </div>
        </form>
        <a href="/business">Cancel</a>
    </div>
</div>